= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_area :name
  .field
    = f.label :username
    %br/
    = f.text_area :username
  .field
    = f.label :email
    %br/
    = f.text_area :email
  .field
    = f.label :admin
    %br/
    = f.check_box :admin
  .field
    = f.label :access
    %br/
    = f.check_box :access
  .actions
    = f.submit
